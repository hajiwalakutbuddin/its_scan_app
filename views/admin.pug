extends layout

block content
  h2 Present Today
  if presentUsers.length
    table
      thead
        tr
          th Name
          th Card ID
          th Age
          th Gender
          th Status
      tbody
        each user in presentUsers
          tr
            td= user.name
            td= user.cardId
            td= user.age || 'N/A'
            td= user.gender || 'N/A'
            td(class=`status-present`)= user.status
  else
    p No users marked present yet.

  h2 Absent Today
  if absentUsers.length
    table
      thead
        tr
          th Name
          th Card ID
          th Age
          th Gender
          th Status
      tbody
        each user in absentUsers
          tr
            td= user.name
            td= user.cardId
            td= user.age || 'N/A'
            td= user.gender || 'N/A'
            td(class=`status-absent`)= user.status
