extends layout

block content
  h1 Attendance Report
  table
    thead
      tr
        th Name
        th Card ID
        th Age
        th Gender
        th Status
    tbody
      each user in users
        tr
          td= user.name
          td= user.cardId
          td= user.age || 'N/A'
          td= user.gender || 'N/A'
          td= user.present ? 'Present' : 'Absent'
  .button-group
    a(href="/export",class="button-export") Export to Excel
